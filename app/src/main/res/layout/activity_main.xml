<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                style="@style/znaki"
                android:fontFamily="@font/boogaloo"
                android:text="ac" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="7" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="4" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="1" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="." />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                style="@style/znaki"
                android:fontFamily="@font/boogaloo"
                android:text="(" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="8" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="5" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="2" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                style="@style/znaki"
                android:fontFamily="@font/boogaloo"
                android:text=")" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="9" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="6" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="3" />

            <TextView
                style="@style/cifri"
                android:fontFamily="@font/boogaloo"
                android:text="c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                style="@style/znaki"
                android:fontFamily="@font/boogaloo"
                android:text="+" />

            <TextView
                style="@style/znaki"
                android:fontFamily="@font/boogaloo"
                android:text="-" />

            <TextView
                style="@style/znaki"
                android:fontFamily="@font/boogaloo"
                android:text="x" />

            <TextView
                style="@style/znaki"
                android:fontFamily="@font/boogaloo"
                android:text=":" />

            <TextView
                style="@style/znaki"
                android:fontFamily="@font/boogaloo"
                android:text="=" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
